{
  "manifest_version": 3,
  "name": "GATE Calculator",
  "version": "1.3",
  "description": "An on-screen GATE exam calculator replicating the official scientific calculator interface.",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "GATE Calculator",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "commands": {
    "toggle_calculator": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle GATE Calculator on page"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "styles.css",
        "js/jquery-3.7.1.min.js",
        "js/jquery-ui.min.js",
        "js/scripts.js",
        "icons/reference.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
